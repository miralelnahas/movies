<resources>
    <!-- Base application theme. -->
    <style name="Theme.Movies" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_800</item>
        <item name="colorPrimaryVariant">@color/gray_800</item>
        <item name="colorOnPrimary">@color/gray_800</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Movies.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/gray_800</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Movies</item>
    </style>
</resources>